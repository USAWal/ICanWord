<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    
    <TextView
        android:id="@+id/part_of_speech_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />
    
    <View
        android:id="@+id/part_of_speech_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/part_of_speech_text"
        android:background="@android:color/darker_gray" />
    
    <TextView
        android:id="@+id/definition_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/part_of_speech_divider"
        android:layout_toLeftOf="@+id/checkbox_definition"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp" />
    
    <CheckBox
        android:id="@id/checkbox_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/definition_text"
        android:layout_alignBottom="@id/definition_text"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:paddingBottom="8dp"
        android:focusable="false"
        android:clickable="false" />
    
</RelativeLayout>